<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="false"><shape>
        <corners android:radius="100dp"/>
        <gradient
            android:angle="269"
            android:centerX="100%"
            android:centerColor="#FF4D00"
            android:startColor="#FF9900"
            android:endColor="#FF4D00"
            android:type="linear"
            />
    </shape></item>

    <item android:state_pressed="true"><shape>
       <corners android:radius="100dp"/>
        <gradient
            android:angle="269"
            android:centerX="100%"
            android:centerColor="#E04400"
            android:startColor="#D98200"
            android:endColor="#DF4300"
            android:type="linear"
            />
    </shape></item>

</selector>

