<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#7F303030"
    tools:context=".Game.GameFeedback.AwardPopUP">

    <androidx.constraintlayout.helper.widget.Flow
        android:id="@+id/flow4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:constraint_referenced_ids="star1,star2,star3"
        app:flow_horizontalGap="10dp"
        app:layout_constraintBottom_toTopOf="@+id/imageView6"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imageView6" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/ok_button"
        android:layout_width="194dp"
        android:layout_height="58dp"
        android:background="@drawable/red_button_style"
        android:text="知道了"
        android:textColor="#FFFFFF"
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/imageView6"
        app:layout_constraintStart_toStartOf="@+id/imageView6"
        app:layout_constraintTop_toBottomOf="@+id/treasure"
        tools:ignore="SpeakableTextPresentCheck" />

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="308dp"
        android:layout_height="447dp"
        android:background="@drawable/award_background"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/star1"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:background="@drawable/star_enable"
        android:enabled="false"
        tools:ignore="SpeakableTextPresentCheck"
        tools:layout_editor_absoluteY="106dp" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/star2"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@drawable/star_enable"
        android:enabled="false"
        tools:ignore="SpeakableTextPresentCheck"
        tools:layout_editor_absoluteY="106dp" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/star3"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:background="@drawable/star_enable"
        android:enabled="false"
        tools:ignore="SpeakableTextPresentCheck"
        tools:layout_editor_absoluteY="106dp" />

    <ImageView
        android:id="@+id/treasure"
        android:layout_width="182dp"
        android:layout_height="184dp"
        android:background="@drawable/image_61"
        app:layout_constraintEnd_toEndOf="@+id/imageView6"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintStart_toStartOf="@+id/imageView6"
        app:layout_constraintTop_toBottomOf="@+id/score_text" />

    <TextView
        android:id="@+id/score_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:gravity="end"
        android:text="8"
        android:textColor="#FF7A00"
        android:textColorLink="#FFFFFF"
        android:textSize="125sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/textView20"
        app:layout_constraintStart_toStartOf="@+id/imageView6"
        app:layout_constraintTop_toBottomOf="@+id/flow4" />

    <TextView
        android:id="@+id/textView20"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="24dp"
        android:text="/10"
        android:textSize="50sp"
        app:layout_constraintBottom_toBottomOf="@+id/score_text"
        app:layout_constraintEnd_toEndOf="@+id/imageView6" />

</androidx.constraintlayout.widget.ConstraintLayout>