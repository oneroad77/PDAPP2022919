<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/tuesday"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HealthManager.AlarmClock.EditClock">

    <TimePicker
        android:id="@+id/timePicker"
        android:layout_width="0dp"
        android:layout_height="192dp"
        android:layout_marginTop="16dp"
        android:theme="@style/my_time_picker_style"
        android:timePickerMode="spinner"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editclock_text" />

    <TextView
        android:id="@+id/editclock_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="編輯鬧鐘"
        android:textColor="#515151"
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/guideline55"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/guideline55" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline55"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.08" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline66"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.23" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline61"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.45" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline63"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.55" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline67"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.9" />

    <androidx.constraintlayout.helper.widget.Flow
        android:id="@+id/flow7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        app:constraint_referenced_ids="Sunday,monday,Tuesday,Wensday,Thursday,Friday,Saturday"
        app:flow_horizontalGap="2dp"
        app:layout_constraintBottom_toTopOf="@+id/guideline61"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/guideline61" />

    <CheckBox
        android:id="@+id/monday"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:background="@drawable/date_button"
        android:button="@drawable/date_button"
        android:checked="false"
        android:text="一"
        android:textAlignment="center"
        android:textColor="@color/date_button_text_color"
        android:textSize="28sp"
        android:textStyle="bold" />

    <CheckBox
        android:id="@+id/Tuesday"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:background="@drawable/date_button"
        android:button="@drawable/date_button"
        android:checked="false"
        android:text="二"
        android:textAlignment="center"
        android:textColor="@color/date_button_text_color"
        android:textSize="28sp"
        android:textStyle="bold" />

    <CheckBox
        android:id="@+id/Wensday"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:background="@drawable/date_button"
        android:button="@drawable/date_button"
        android:checked="false"
        android:text="三"
        android:textAlignment="center"
        android:textColor="@color/date_button_text_color"
        android:textSize="28sp"
        android:textStyle="bold" />

    <CheckBox
        android:id="@+id/Thursday"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:background="@drawable/date_button"
        android:button="@drawable/date_button"
        android:checked="false"
        android:text="四"
        android:textAlignment="center"
        android:textColor="@color/date_button_text_color"
        android:textSize="28sp"
        android:textStyle="bold" />

    <CheckBox
        android:id="@+id/Friday"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:background="@drawable/date_button"
        android:button="@drawable/date_button"
        android:checked="false"
        android:text="五"
        android:textAlignment="center"
        android:textColor="@color/date_button_text_color"
        android:textSize="28sp"
        android:textStyle="bold" />

    <CheckBox
        android:id="@+id/Saturday"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:background="@drawable/date_button"
        android:button="@drawable/date_button"
        android:checked="false"
        android:text="六"
        android:textAlignment="center"
        android:textColor="@color/date_button_text_color"
        android:textSize="28sp"
        android:textStyle="bold" />

    <CheckBox
        android:id="@+id/Sunday"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:background="@drawable/date_button"
        android:button="@drawable/date_button"
        android:checked="false"
        android:text="日"
        android:textAlignment="center"
        android:textColor="@color/date_button_text_color"
        android:textSize="28sp"
        android:textStyle="bold" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/back_history_page"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/delet_clock_button"
        android:text="刪除鬧鐘"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        android:textStyle="bold"
        android:visibility="invisible"
        app:circularflow_radiusInDP="10dp"
        app:layout_constraintBottom_toTopOf="@+id/guideline63"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/guideline63" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/cancel_button"
        android:layout_width="135dp"
        android:layout_height="wrap_content"
        android:background="@drawable/logging_page_button_f"
        android:text="取消"
        android:textColor="@color/white"
        android:textSize="30dp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="233dp"
        tools:layout_editor_absoluteY="602dp" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/store_button"
        android:layout_width="135dp"
        android:layout_height="wrap_content"
        android:background="@drawable/logging_page_button_f"
        android:text="儲存"
        android:textColor="@color/white"
        android:textSize="30dp"
        android:textStyle="bold"
        tools:layout_editor_absoluteY="602dp" />

    <androidx.constraintlayout.helper.widget.Flow
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:constraint_referenced_ids="cancel_button,store_button"
        app:flow_horizontalGap="20dp"
        app:layout_constraintBottom_toTopOf="@+id/guideline67"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/guideline67" />
</androidx.constraintlayout.widget.ConstraintLayout>