<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/playhowlong"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Game.GameResult">

    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="336dp"
        android:layout_height="605dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/award_background"
        app:layout_constraintBottom_toTopOf="@+id/flow8"
        app:layout_constraintEnd_toStartOf="@+id/guideline21"
        app:layout_constraintStart_toStartOf="@+id/guideline17"
        app:layout_constraintTop_toTopOf="@+id/guideline18" />

    <TextView
        android:id="@+id/dateText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="本次訓練結果"
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/guideline18"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline18"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.1" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline19"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.15" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline17"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.05" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline21"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.95" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/back_history_page"
        style="@style/logging_page_button"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:background="@drawable/gray_button"
        android:text="再玩一次"
        android:textColor="@color/word1" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/backHome"
        style="@style/logging_page_button"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:background="@drawable/gray_button"
        android:text="下一關"
        android:textColor="@color/word1" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.95" />

    <androidx.constraintlayout.helper.widget.Flow
        android:id="@+id/flow8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:constraint_referenced_ids="back_history_page,backHome"
        app:flow_horizontalGap="25dp"
        app:layout_constraintBottom_toTopOf="@+id/guideline5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/guideline5" />

    <androidx.constraintlayout.helper.widget.Flow
        android:id="@+id/flow3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="24dp"
        android:orientation="horizontal"
        android:visibility="visible"
        app:constraint_referenced_ids="pro,pretestdb_text_view,post,posttestdb_text_view,statplay,play_how_long_text_view,game_audio"
        app:flow_maxElementsWrap="2"
        app:flow_verticalGap="5dp"
        app:flow_wrapMode="chain"
        app:layout_constraintEnd_toStartOf="@+id/guideline21"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/guideline17"
        app:layout_constraintTop_toBottomOf="@+id/success_loss_text_view" />

    <TextView
        android:id="@+id/diffculty_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="@string/level_difficulty"
        android:textAlignment="center"
        android:textSize="48sp"
        app:layout_constraintEnd_toStartOf="@+id/guideline21"
        app:layout_constraintStart_toStartOf="@+id/guideline17"
        app:layout_constraintTop_toTopOf="@+id/guideline19" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/game_audio"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/imageView7"
        tools:layout_editor_absoluteX="36dp" />

    <TextView
        android:id="@+id/post"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="後測分貝："
        android:textSize="24sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/statplay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="遊玩時長："
        android:textSize="24sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/success_loss_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textColor="#FF6D00"
        android:textSize="60sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/guideline21"
        app:layout_constraintStart_toStartOf="@+id/guideline17"
        app:layout_constraintTop_toBottomOf="@+id/diffculty_text_view" />

    <TextView
        android:id="@+id/play_how_long_text_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/play_how_long"
        android:textSize="20sp"
        tools:layout_editor_absoluteX="230dp"
        tools:layout_editor_absoluteY="315dp" />

    <TextView
        android:id="@+id/pretestdb_text_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/pretest_db"
        android:textSize="20sp"
        tools:layout_editor_absoluteX="97dp"
        tools:layout_editor_absoluteY="268dp" />

    <TextView
        android:id="@+id/posttestdb_text_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/post_test_db"
        android:textSize="20sp"
        tools:layout_editor_absoluteX="240dp"
        tools:layout_editor_absoluteY="268dp" />

    <TextView
        android:id="@+id/pro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="前測分貝："
        android:textSize="24sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/hint2_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:gravity="center"
        android:paddingLeft="5dp"
        android:paddingTop="40dp"
        android:paddingRight="5dp"
        android:paddingBottom="40dp"
        android:text="剩餘休息時間:/n60秒"
        android:textSize="45sp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/guideline21"
        app:layout_constraintHorizontal_bias="0.512"
        app:layout_constraintStart_toStartOf="@+id/guideline17"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>